    );
    $form['camping_settings_' . $unit_type]['low']['camping_setting_price_' . $unit->type . '_weekend'] = array(
      '#type' => 'textfield',
      '#title' => t($unit_label . ' price for one weekend'),
      '#description' => t("e.g 2500"),
