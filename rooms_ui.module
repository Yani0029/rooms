    );
    $form['camping_settings_' . $unit_type]['high'] = array(
      '#type' => 'fieldset',
      '#title' => t('Camping ' . $unit_label . ' high season'),
      '#collapsible' => FALSE,
    );
    $form['camping_settings_' . $unit_type]['high']['camping_setting_price_' . $unit->type . '_day_high'] = array(
      '#type' => 'textfield',
      '#title' => t($unit_label . ' High Season day price'),
      '#description' => t("e.g. 549"),
      '#default_value' => variable_get('camping_setting_price_' . $unit->type . '_day_high'),
